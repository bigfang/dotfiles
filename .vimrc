syntax on
"colorscheme slate
set smarttab
set expandtab
set hlsearch
set tabstop=4
set guifont=Monaco:h10:cANSI
set fileencodings=ucs-bom,utf-8,gb18030,cp936,latin1

let g:mapleader=" "
nnoremap <leader>w :w<enter>

noremap q %
noremap % q

noremap H ^
noremap ^ H
noremap L $
noremap $ L

nnoremap j gj
nnoremap gj j
nnoremap k gk
nnoremap gk k

nnoremap <BS> :nohl<CR>
